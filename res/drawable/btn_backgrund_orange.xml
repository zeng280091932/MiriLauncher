<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 没有焦点状态 -->
    <item android:drawable="@drawable/btn_unselected" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@drawable/btn_selected_orange" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>
    <!-- 获得焦点状态 -->
    <item android:drawable="@drawable/btn_selected_orange" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@drawable/btn_selected_orange" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>
    <!-- 按下状态 -->
    <item android:drawable="@drawable/btn_selected_orange" android:state_pressed="true"/>

</selector>